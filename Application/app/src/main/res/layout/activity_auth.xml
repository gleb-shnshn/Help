<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_medium">


    <ImageView
        android:id="@+id/appLabel"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:padding="30dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/logo_black" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:text="@string/name_and_surname"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_auth" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/negative_spacing_medium"
        android:ems="10"
        android:hint="@string/name_hint"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_big"
        android:paddingEnd="@dimen/spacing_small"
        android:text="@string/login"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_auth" />

    <EditText
        android:id="@+id/loginInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/negative_spacing_medium"
        android:ems="10"
        android:hint="@string/login_hint"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_big"
        android:paddingEnd="@dimen/spacing_small"
        android:text="@string/password"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_auth" />

    <EditText
        android:id="@+id/passInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/negative_spacing_medium"
        android:ems="10"
        android:hint="@string/blurred_password_hint"
        android:inputType="textPassword" />

    <com.papalam.help.LoadingButton
        android:id="@+id/progressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big"
        android:background="@color/grey"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_big"
        android:text="@string/already_registered"
        android:textAlignment="center" />
</LinearLayout>